{% extends 'base.html.twig' %}

{% block body %}
<div class="login-container">
    {% if error %}
        <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
    <div class="login-box">
        <h2>Iniciar sesión</h2>
        <form action="{{ path('app_login') }}" method="post">
            <div class="input-group">
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required>
            </div>
            
            <div class="input-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="_password" required>
            </div>
            
            <button type="submit" class="login-button">Iniciar sesión</button>
        </form>
        
        <p class="register-link">¿No tienes cuenta? <a href="{{ path('app_register') }}">Regístrate aquí</a></p>
    </div>
</div>

<style>
    body {
        background-color: #121212;
        color: white;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }
    .login-container {
        text-align: center;
    }
    .login-box {
        background: #181818;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        width: 300px;
    }
    .input-group {
        margin-bottom: 15px;
    }
    .input-group label {
        display: block;
        text-align: left;
        margin-bottom: 5px;
    }
    .input-group input {
        width: 100%;
        padding: 8px;
        border: none;
        border-radius: 4px;
    }
    .login-button {
        width: 100%;
        padding: 10px;
        background-color: #1DB954;
        border: none;
        color: white;
        font-size: 16px;
        cursor: pointer;
        border-radius: 4px;
    }
    .login-button:hover {
        background-color: #1ed760;
    }
    .register-link {
        margin-top: 15px;
        font-size: 14px;
    }
    .register-link a {
        color: #1DB954;
        text-decoration: none;
    }
    .register-link a:hover {
        text-decoration: underline;
    }
</style>
{% endblock %}
