{% extends 'base.html.twig' %}

{% block body %}
<div class="login-container">
    {% if error %}
        <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
    <div class="login-box">
        <h2 style="text-shadow: 0 0 5px #ffffff;" >Iniciar sesión</h2>
        <form action="{{ path('app_login') }}" method="post">
            <div class="input-group">
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required class="input-field">
            </div>
            
            <div class="input-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="_password" required class="input-field">
            </div>
            
            <button type="submit" class="login-button">Iniciar sesión</button>
        </form>
        
        <p class="register-link">¿No tienes cuenta? <a href="{{ path('app_register') }}">Regístrate aquí</a></p>
    </div>
</div>

<style>

    body {
        background-color: #121212;
        color: white;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }
    .login-container {
        text-align: center;
    }
    .login-box {
        background: #181818;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(33, 42, 142, 0.8);
        width: 320px;
        animation: neon-glow 1.5s infinite alternate;
    }
    .input-group {
        margin-bottom: 15px;
        text-align: left;
    }
    .input-group label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: rgba(33, 42, 142, 0.8);
        text-shadow: 0 0 5px rgba(33, 42, 142, 0.8), 0 0 10px rgba(33, 42, 142, 0.8);
    }
    .input-field {
        width: 100%;
        padding: 8px;
        border: none;
        border-radius: 4px;
        background: #282828;
        color: white;
        box-shadow: 0 0 5pxrgba(33, 42, 142, 0.8);
        outline: none;
        transition: all 0.3s ease-in-out;
    }
    .input-field:focus {
        box-shadow: 0 0 10px rgba(33, 42, 142, 0.8), 0 0 20px rgba(33, 42, 142, 0.8);
    }
    .login-button {
        width: 100%;
        padding: 10px;
        background-color: rgb(216, 128, 34);
        border: none;
        color: white;
        font-size: 16px;
        cursor: pointer;
        border-radius: 4px;
        text-shadow: 0 0 5px #ffffff;
        box-shadow: 0 0 10px rgb(216, 128, 34);
        transition: all 0.3s ease-in-out;
    }
    .login-button:hover {
        background-color: rgb(215, 101, 30);
        box-shadow: 0 0 15px rgb(215, 101, 30), 0 0 30px rgb(215, 101, 30);
    }
    .register-link {
        margin-top: 15px;
        font-size: 14px;
    }
    .register-link a {
        color: rgb(216, 128, 34);
        text-decoration: none;
        text-shadow: 0 0 5px rgb(216, 128, 34), 0 0 10px rgb(216, 128, 34);
        transition: text-shadow 0.3s ease-in-out;
    }
    .register-link a:hover {
        text-decoration: underline;
        text-shadow: 0 0 10px rgb(215, 101, 30), 0 0 20px rgb(215, 101, 30);
    }
</style>
{% endblock %}
